{
  "name": "news-hack",
  "displayName": "News Hack",
  "description": "Hacker News headlines from within VSCode.",
  "icon": "images/icon.png",
  "license": "MIT",
  "keywords": [
    "news",
    "trending",
    "hacker news",
    "stories"
  ],
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "version": "0.0.9",
  "publisher": "chrisbibby",
  "author": {
    "name": "Chris Bibby"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisBibby/vscode_news-hack.git"
  },
  "homepage": "https://github.com/ChrisBibby/vscode_news-hack",
  "bugs": "https://github.com/ChrisBibby/vscode_news-hack/issues",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:hacker-news-top-stories"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "newsHack.unread",
        "description": "Color for displaying unread Hacker News articles",
        "defaults": {
          "dark": "#4169e1",
          "light": "#3d3d3d",
          "highContrast": "#ffffff"
        }
      },
      {
        "id": "newsHack.read",
        "description": "Color for displaying read Hacker News articles",
        "defaults": {
          "dark": "#89cff0",
          "light": "#cfcfcf",
          "highContrast": "#ffffff"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hacker-news",
          "title": "Hacker News",
          "icon": "./images/icon.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "hacker-news-top-stories",
        "contents": "Retrieving Hacker News Top Stories"
      }
    ],
    "views": {
      "hacker-news": [
        {
          "id": "hacker-news-top-stories",
          "name": "Top Stories"
        }
      ]
    },
    "commands": [
      {
        "command": "hacker-news.visit-website",
        "title": "Open Hacker News Website",
        "icon": "$(globe)"
      },
      {
        "command": "hacker-news.refresh-stories",
        "title": "Refresh Top Stories",
        "icon": "$(sync)"
      },
      {
        "command": "hacker-news.clear-history",
        "title": "Clear Story History",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hacker-news.visit-website",
          "when": "view == hacker-news-top-stories",
          "group": "navigation"
        },
        {
          "command": "hacker-news.refresh-stories",
          "when": "view == hacker-news-top-stories",
          "group": "navigation"
        },
        {
          "command": "hacker-news.clear-history",
          "when": "view == hacker-news-top-stories",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "deploy": "vsce publish",
    "lint": "eslint src --ext ts --max-warnings=0",
    "fix:prettier": "prettier \"**/*.ts\" --write",
    "package": "vsce package",
    "vscode:prepublish": "npm run lint && npm run test && webpack --mode production",
    "webpack": "webpack --mode production",
    "webpack-dev": "webpack --mode development",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.ts'"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "vsce": "^1.83.0",
    "vscode-test": "^1.4.1",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dayjs": "^1.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
